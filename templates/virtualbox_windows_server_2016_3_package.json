{
  "builders": [
    {
      "type": "virtualbox-ovf",
      "source_path": "./output-package/vbox-package.ovf",
      "output_directory": "./output-export-vbox/",
      "vm_name": "vbox-package-vagrant",
      "headless": true,
      "guest_additions_mode": "disable",
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "2048" ],
        [ "modifyvm", "{{.Name}}", "--vram", "128" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "1" ]
       ],
       "communicator": "winrm",
       "winrm_username": "vagrant",
       "winrm_password": "vagrant",
       "winrm_timeout": "12h",
       "shutdown_command": "C:/Scripts/sysprep.cmd",
       "shutdown_timeout": "1h",
       "communicator": "winrm"
    }
  ],
  "provisioners": [
    {
    "type": "powershell",
    "elevated_user": "vagrant",
    "elevated_password": "vagrant",
    "script": "./scripts/tools_and_stuff.ps1"
    },
    {
    "type": "windows-restart",
    "restart_timeout": "1h"
    },
    {
    "type": "powershell",
    "elevated_user": "vagrant",
    "elevated_password": "vagrant",
    "script": "./scripts/windows-compress.ps1"
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "keep_input_artifact": true,
      "output": "windows2016_vbox.box",
      "vagrantfile_template": "./templates/vagrantfile-windows-2016.template"
    },
    {
      "type": "virtualbox-to-hyperv",
      "keep_input_artifact": true,
      "output": "windows2016_hyperv.box",
      "vagrantfile_template": "./templates/vagrantfile-windows-2016.template"
    }
  ]
}
