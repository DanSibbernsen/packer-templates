{
  "builders": [
    {
      "type": "parallels-pvm",
      "parallels_tools_flavor": "win",
      "source_path": "./output-updates/win2016-updates.pvm",
      "vm_name": "win2016",
      "prlctl":[
        ["set", "{{.Name}}", "--memsize", "2048"],
        ["set", "{{.Name}}", "--cpus", "1"]
       ],
       "communicator": "winrm",
       "winrm_username": "vagrant",
       "winrm_password": "vagrant",
       "winrm_timeout": "12h",
       "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\"",
       "shutdown_timeout": "1h",
       "output_directory": "./output-package/",
       "communicator": "winrm"
    }
  ],
  "provisioners": [
    {
    "type": "powershell",
    "elevated_user": "vagrant",
    "elevated_password": "vagrant",
    "script": "./scripts/tools_and_stuff.ps1"
    },
    {
    "type": "windows-restart",
    "restart_timeout": "1h"
    },
    {
    "type": "powershell",
    "elevated_user": "vagrant",
    "elevated_password": "vagrant",
    "script": "./scripts/windows-compress.ps1"
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "keep_input_artifact": true,
      "output": "windows2016_parallels.box",
      "vagrantfile_template": "vagrantfile-windows-2016.template"
    }
  ]
}
