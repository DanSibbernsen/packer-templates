{
  "builders": [
    {
      "type": "virtualbox-ovf",
      "source_path": "./output-package/vbox-package.ovf",
      "output_directory": "./output-export-hyperv/",
      "vm_name": "vbox-export-hyperv",
      "guest_additions_mode": "disable",
      "headless": true,
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "2048" ],
        [ "modifyvm", "{{.Name}}", "--vram", "128" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "1" ]
       ],
       "communicator": "winrm",
       "winrm_username": "vagrant",
       "winrm_password": "vagrant",
       "winrm_timeout": "12h",
       "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\"",
       "shutdown_timeout": "1h",
       "communicator": "winrm"
    }
  ],
  "post-processors": [
    {
      "type": "virtualbox-to-hyperv",
      "keep_input_artifact": true,
      "output": "windows2016_hyperv.box",
      "vagrantfile_template": "vagrantfile-windows-2016.template"
    }
  ]
}
